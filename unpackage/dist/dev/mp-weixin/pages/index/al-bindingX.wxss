view,
image,
input,
scroll-view,
swiper,
swiper-item,
text,
textarea,
video {
  position: relative;
  border: 0px solid #000000;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
swiper-item {
  position: absolute;
}


